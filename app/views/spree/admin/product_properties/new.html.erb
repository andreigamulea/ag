<% content_for :page_title do %>
    <%= t(:new_product_property) %>
  <% end %>
  
  <%= render 'spree/admin/shared/error_messages', resource: @product_property %>
  
  <%= form_for [:admin, @product, @product_property] do |f| %>
    <fieldset>
      <legend><%= t(:new_product_property) %></legend>
  
      <div class="field">
        <%= f.label :property_name, t(:name) %>
        <%= f.select :property_name, Spree::Property.all.pluck(:name), { include_blank: true }, class: 'select2' %>
      </div>
  
      <div class="field">
        <%= f.label :value, t(:value) %>
        <%= f.text_field :value, class: 'form-control' %>
      </div>
  
      <div class="form-actions">
        <%= f.submit "Create", class: 'btn btn-primary' %>
        <%= link_to t(:cancel), admin_product_product_properties_path(@product), class: 'btn btn-secondary' %>
      </div>
    </fieldset>
  <% end %>