<div class="max-w-md mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-4">Log in</h2>
  <%= form_for(:spree_user, as: :spree_user, url: spree.spree_user_session_path, html: { class: "space-y-4" }) do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= render "spree/shared/error_messages", resource: spree_user %>

    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700" %>
    </div>

    <%= render "spree/shared/links" %>
  <% end %>
</div>