    <style>
        /* ----------- STIL GENERAL ----------- */
        body {
            font-family: 'Lora', serif;
            margin: 0;
            padding: 0;
            background: #fdfaf5;
            color: #333;
        }

        /* ----------- HEADER ----------- */

        .header_container {
            background: #8b0000;
            border-bottom: 3px solid #fbc02d;
        }

        header {
            color: white;
            max-width: 1280px;
            margin: 0 auto;
            text-align: center;
            font-size: 22px;
            letter-spacing: 2px;
            display: flex;
            flex-direction: row;
            justify-content: space-around;
            align-items: center;
        }

        header p {
            font-size: 22px;
        }


        /* ----------- MENIU NAV ----------- */
        nav {
            text-align: center;
            padding: 10px 0;
            background: white;
            border-bottom: 1px solid #ddd;
        }

        nav a {
            color: #8b0000;
            text-decoration: none;
            margin: 0 20px;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 14px;
        }

        nav a:hover {
            color: #fbc02d;
            border-bottom: 2px solid #fbc02d;
            padding-bottom: 5px;
        }

        /* ----------- CONTAINER ----------- */
        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 25px;
            padding-top: 0px;
            background: white;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin-top: 20px;
        }

        /* ----------- TITLU SECTIUNI ----------- */
        .section-title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            padding: 8px;
            margin-bottom: 1em;
            padding-top: 30px;
            color: #8b0000;
        }

        .section-title h1 {
            font-size: 24px;
            margin-bottom: 0;
        }

        /* ----------- SEPARATOR ----------- */
        .separator {
            width: 68%;
            height: 1px;
            background-color: #8b0000;
            margin: 0 auto;
        }

        /* ----------- GRID ARTICOLE + RESURSE ----------- */
        .flex-container {
            display: flex;
            gap: 20px;
            justify-content: space-between;
            padding-top: 20px;
        }

        .box {
            flex: 1;
            padding: 20px;
            background: #ffffff;
            border-left: 1px solid #8b0000;
            border-right: 1px solid #8b0000;
            border-radius: 10px;
            text-align: center;
        }

        .box h2 {
            font-size: 18px;
            margin-bottom: 8px;
            color: #8b0000;
        }

        .box p {
            font-size: 14px;
            color: #555;
        }

        .box a {
            display: inline-block;
            margin-top: 10px;
            padding: 6px 12px;
            border: 1px solid #8b0000;
            border-radius: 5px;
            color: #ffffff;
            text-decoration: none;
            font-size: 12px;
            font-weight: bold;
            background: #bc2c2c;
        }

        .box a:hover {
            background: #8b0000;
            color: white;
        }

        /* ----------- GRID PENTRU CARTI CU IMAGINI ----------- */
        .books-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            padding-top: 20px;
        }

        .book {
            background: #fff;
            padding: 10px;
            border-radius: 6px;
            text-align: center;
            transition: all 0.3s ease-in-out;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.08);
        }

        .book img {
            width: 100%;
            max-height: 75px;
            object-fit: contain;
            border-radius: 5px;
            margin-bottom: 0px;

        }

        .book h3 {
            font-size: 18px;
            color: #8b0000;
            margin-bottom: 5px;
            margin-top:10px;
        }

        .book p {
            font-size: 14px;
            color: #555;
        }

        .book a {
            display: inline-block;
            margin-top: 8px;
            padding: 5px 22px;
            border: 1px solid #8b0000;
            border-radius: 5px;
            color: #fff;
            background: #bc2c2c;
            text-decoration: none;
            font-size: 12px;
            font-weight: bold;
        }

        .book a:hover {
            background: #8b0000;
            color: white;
        }

        .box,
        .book {
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .box:hover,
        .book:hover,
        nav:hover {
            transform: translateY(-5px);
            box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.15);
            border: none;
        }

        nav:hover {
            transform: translateY(-2px);
            box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.15);
            border: none;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
                /* MicƒÉ mi»ôcare √Æn jos */
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .box {
            opacity: 0;
            /* Ascundem ini»õial */
            animation: fadeIn 0.8s ease-out forwards;
            animation-delay: 0.5s;
            /* Delay global de 0.5s */
        }

        .book {
            opacity: 0;
            /* Ascundem ini»õial */
            animation: fadeIn 0.8s ease-out forwards;
            animation-delay: 0.90s;
            /* Delay global de 0.5s */
        }


        /* ----------- FOOTER ----------- */
        footer {
            text-align: center;
            padding: 15px 0;
            background: #8b0000;
